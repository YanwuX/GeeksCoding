package geeksForGeeks;

public class kthSmallestElement {
	
	public static int findKthSmallestElement(int[] arr, int k){
		if(arr == null || k > arr.length) return 0;
		
		return findKthSmallestElement(arr, k, 0, arr.length - 1);
	}
	
	public static int findKthSmallestElement(int[] arr, int k, int l, int r) {
		int pos = partition(arr, 0, arr.length - 1);
		
		if(pos == k) return arr[pos];
		if(pos > k) return findKthSmallestElement(arr, k, l, pos - 1);
		else return findKthSmallestElement(arr, pos + 1, k - pos + l - 1, arr.length - 1);
		
	}
	
	public static int partition(int[] arr, int l, int r){
		int temp = arr[r], i = l;
		for(int j = l; j < r; ++j){
			if(!(arr[j] > temp)) {
				System.out.println("arr[i] " + i + " " + "arr[j] " + j);
				swap(arr[i], arr[j]);
				i++;
			}
		}
		swap(arr[i], arr[r]);
		return i;
	}
	
	public static void swap(int a, int b){
		int temp = a;
		a = b;
		b = temp;
	}

	public static void main(String[] args) {
		int arr[] = {12, 3, 5, 7, 4, 19, 26};
		System.out.println(findKthSmallestElement(arr, 3));
	}

}
